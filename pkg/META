name 		= "shcaml"
version 	= "%%VERSION%%"
description 	= "Shcaml is an OCaml library for UNIX shell programming"
requires	= "unix hmap pcre lwt.unix stdcompat"
archive(byte)	= "shcaml.cma"
plugin(byte) = "shcaml.cma"
archive(native)	= "shcaml.cmxa"
plugin(native) = "shcaml.cmxs"
exists_if = "shcaml.cma"

package "top" (
 version = "%%VERSION%%"
 description = "Shcaml toplevel support"
 requires = "shcaml"
 archive(byte) = "shcaml_top.cma"
 plugin(byte) = "shcaml_top.cma"
 archive(native) = "shcaml_top.cmxa"
 plugin(native) = "shcaml_top.cmxs"
 exists_if = "shcaml_top.cma"
)
